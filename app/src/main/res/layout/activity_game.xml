<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.luismiguel.pdmrockpaperscissors.GameActivity"
    tools:layout_editor_absoluteY="81dp">

    <TextView
        android:id="@+id/labelPlayerOneNameScore"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Player #1"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/labelPlayerOneScore"
        app:layout_constraintEnd_toEndOf="@+id/imageChoiceRock"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/labelPlayerTwoNameScore"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Player #2"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/labelPlayerTwoScore"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageChoiceScissors" />

    <TextView
        android:id="@+id/labelPlayerOneScore"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="0"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageChoiceRock"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/labelPlayerTwoScore"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="0"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageChoiceScissors" />

    <ImageView
        android:id="@+id/imageChoiceRock"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="60dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toTopOf="@+id/labelPlayerOneNameScore"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/pedra" />

    <ImageView
        android:id="@+id/imageChoicePaper"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="60dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toTopOf="@+id/textView7"
        app:layout_constraintEnd_toStartOf="@+id/imageChoiceScissors"
        app:layout_constraintStart_toEndOf="@+id/imageChoiceRock"
        app:srcCompat="@drawable/papel" />

    <ImageView
        android:id="@+id/imageChoiceScissors"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="60dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toTopOf="@+id/labelPlayerTwoNameScore"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/tesoura" />

    <ImageView
        android:id="@+id/imagePlayerOneSelected"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toTopOf="@+id/imageChoiceRock"
        app:layout_constraintEnd_toEndOf="@+id/imageChoicePaper"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/padrao" />

    <ImageView
        android:id="@+id/imagePlayerTwoSelected"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toTopOf="@+id/imageChoiceScissors"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/imageChoicePaper"
        app:srcCompat="@drawable/padrao" />

    <ImageView
        android:id="@+id/imageWinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/padrao" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="Quem joga:"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/labelWhoPlaying"
        app:layout_constraintEnd_toStartOf="@+id/labelPlayerTwoNameScore"
        app:layout_constraintStart_toEndOf="@+id/labelPlayerOneNameScore" />

    <TextView
        android:id="@+id/labelWhoPlaying"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/labelPlayerTwoScore"
        app:layout_constraintStart_toEndOf="@+id/labelPlayerOneScore" />

</android.support.constraint.ConstraintLayout>
